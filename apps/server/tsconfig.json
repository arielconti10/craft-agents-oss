{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "lib": ["ESNext"],
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "types": ["bun-types", "node"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@craft-agent/shared/*": ["../../packages/shared/src/*"],
      "@craft-agent/core/*": ["../../packages/core/src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
